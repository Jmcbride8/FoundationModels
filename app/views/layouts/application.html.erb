<!DOCTYPE html>
<html>
  <head>
    <title>FoundationModels</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
    <div id="flex-content-container">
      <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand">
          <%= link_to image_tag("Lighthouse.png", class: "img-responsive", id: "navbar-logo"), root_path %>
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <%= link_to 'ABOUT US', about_pages_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'THE MODELS', models_pages_path, class: 'nav-link' %>
            </li>
            <li class="nav-item" aria-disabled="true">
              <%= link_to 'DOWNLOADS', downloads_path, class: 'nav-link' %>
            </li>
          </ul>

          <ul class="navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="nav-item ">
                <%= link_to 'SIGN OUT' ,destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to 'SIGN IN', new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to 'SIGN UP', new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>

        </div>
      </nav>
      <br/>
  <!-- ALERT IF USER LOGIN FAILS -->
      <% if notice.present? %>
        <br/>
        <p class="alert alert-primary"><%= notice %> </p>
      <% end %>
      <% if alert.present? %>
        <br/>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>   

      <%= yield %>
    </div>

    <!-- footer 
    <div id="footer">
      <div class="container">
        <b> Footer here </b>
        <br/>
        <%=link_to 'Link', '#' %>
      </div>
    </div>
    -->
  </body>
</html>
